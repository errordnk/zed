{
  // ============================================================
  // COMPLETE SETTINGS EXAMPLE (Windows Terminal style)
  // Everything in one file: profiles, keybindings, themes, AI
  // ============================================================

  // ========== TERMINAL PROFILES ==========
  "terminal": {
    // Connection profiles (shown in dropdown menu)
    "profiles": [
      {
        "type": "local",
        "name": "Local Shell"
      },
      {
        "type": "ssh",
        "name": "Production Server",
        "host": "prod.example.com",
        "user": "admin",
        "port": 22
      },
      {
        "type": "ssh",
        "name": "Development Server",
        "host": "dev.example.com",
        "user": "developer"
      },
      {
        "type": "ssh",
        "name": "Jump Host",
        "host": "10.0.0.5",
        "user": "ubuntu",
        "port": 2222
      }
    ],

    // Terminal appearance
    "shell": {
      "program": "/bin/zsh"
    },
    "working_directory": "current_project_directory",
    "font_size": 14,
    "font_family": "JetBrains Mono",
    "line_height": "comfortable",
    "blinking": "terminal_controlled",
    "alternate_scroll": "on",
    "option_as_meta": false,
    "copy_on_select": false,
    "keep_selection_on_copy": false,
    "dock": "bottom",
    "default_width": 640,
    "default_height": 320,
    "cursor_shape": "block",
    "toolbar": {
      "breadcrumbs": true
    },
    "scrollbar": {
      "show": "auto"
    },

    // Environment variables for terminal
    "env": {
      "EDITOR": "zed",
      "VISUAL": "zed"
    }
  },

  // ========== KEYBINDINGS ==========
  // All keyboard shortcuts in one place
  "keymap": [
    // Global shortcuts (work everywhere)
    {
      "context": "Workspace",
      "bindings": {
        "f12": "assistant::ToggleFocus",      // Toggle AI panel (like Windows Terminal devtools)
        "ctrl-w": "workspace::CloseWindow",
        "ctrl-shift-n": "workspace::NewWindow",
        "ctrl-,": "zed::OpenSettings",
        "ctrl-shift-p": "command_palette::Toggle"
      }
    },

    // Terminal shortcuts
    {
      "context": "Terminal",
      "bindings": {
        "ctrl-shift-t": "workspace::NewTerminal",
        "ctrl-shift-w": "pane::CloseActiveItem",
        "ctrl-tab": "pane::ActivateNextItem",
        "ctrl-shift-tab": "pane::ActivatePreviousItem",
        "ctrl-shift-c": "terminal::Copy",
        "ctrl-shift-v": "terminal::Paste"
      }
    },

    // AI assistant shortcuts (when panel is focused)
    {
      "context": "AssistantPanel",
      "bindings": {
        "ctrl-shift-a": "assistant::ToggleFocus",
        "ctrl-enter": "assistant::Assist",
        "escape": "assistant::Cancel"
      }
    }
  ],

  // ========== THEME & APPEARANCE ==========
  "theme": {
    // Main theme
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark",

    // Custom theme overrides
    "overrides": {
      "title_bar_background": "#1e1e1e",
      "tab_bar_background": "#252526",
      "tab_active_background": "#1e1e1e",
      "terminal_background": "#0e0e0e",
      "terminal_foreground": "#cccccc"
    }
  },

  // UI appearance settings
  "ui_font_size": 14,
  "ui_font_family": "Zed Sans",
  "buffer_font_size": 14,
  "buffer_font_family": "JetBrains Mono",

  // Window appearance
  "auto_update": true,
  "restore_on_startup": "last_workspace",
  "show_whitespaces": "selection",
  "show_wrap_guides": true,
  "wrap_guides": [80, 120],

  // ========== AI PROVIDERS ==========
  // API keys are read from environment variables (ANTHROPIC_API_KEY, OPENAI_API_KEY, etc.)
  // or from system keychain - NOT stored in settings.json
  "language_models": {
    // Anthropic Claude (direct API - requires ANTHROPIC_API_KEY env var)
    "anthropic": {
      "api_url": "https://api.anthropic.com"
    },

    // OpenAI (direct API - requires OPENAI_API_KEY env var)
    "openai": {
      "api_url": "https://api.openai.com/v1"
    },

    // Google Gemini (requires GOOGLE_API_KEY env var)
    "google": {
      "api_url": "https://generativelanguage.googleapis.com"
    },

    // Ollama (local models)
    "ollama": {
      "api_url": "http://localhost:11434"
    },

    // Custom OpenAI-compatible providers
    "openai_compatible": {
      "opencode": {
        "api_url": "https://api.opencode.com/v1",
        "available_models": [
          {
            "name": "grok-code-fast1",
            "display_name": "Grok Code Fast",
            "max_tokens": 128000
          }
        ]
      }
    },

    // Zed Pro built-in providers (no API keys needed)
    // Includes: Claude, GPT (Codex), Gemini, Grok
    "zed.dev": {}
  },

  // ========== AGENT SETTINGS ==========
  // Agent is the AI assistant with tool access
  "agent": {
    "enabled": true,
    "button": true,
    "dock": "right",
    "default_width": 640,

    // Default model for new agent threads
    "default_model": {
      "provider": "zed.dev",  // Use Zed Pro built-in (no API key needed)
      "model": "claude-sonnet-4"
    },

    // Default agent profile
    "default_profile": "write",

    // Agent profiles with different tool permissions
    "profiles": {
      "write": {
        "name": "Write",
        "enable_all_context_servers": true,
        "tools": {
          "read_file": true,
          "edit_file": true,
          "create_directory": true,
          "delete_path": true,
          "move_path": true,
          "list_directory": true,
          "grep": true,
          "terminal": true,
          "web_search": true,
          "diagnostics": true,
          "thinking": true
        }
      },
      "ask": {
        "name": "Ask",
        "tools": {
          "read_file": true,
          "list_directory": true,
          "grep": true,
          "web_search": true,
          "diagnostics": true,
          "thinking": true
        }
      },
      // Custom profile with different model
      "code-review": {
        "name": "Code Review",
        "default_model": {
          "provider": "opencode",
          "model": "grok-code-fast1"
        },
        "tools": {
          "read_file": true,
          "grep": true,
          "diagnostics": true
        }
      }
    },

    // Allow tools to run without confirmation
    "always_allow_tool_actions": false,

    // Completion mode: "normal" or "burn" (max performance)
    "preferred_completion_mode": "normal",
    "default_width": 640,
    "button": true,

    // Context settings
    "context": {
      "max_tokens": 100000,
      "include_open_files": true,
      "include_git_diff": true
    }
  },

  // Inline assist settings
  "inline_assist": {
    "enabled": true,
    "provider": "anthropic",
    "model": "claude-3-5-sonnet-20241022"
  },

  // ========== GIT SETTINGS ==========
  "git": {
    "enabled": true,
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 1000
    }
  },

  // ========== PROJECT SETTINGS ==========
  "project_panel": {
    "button": true,
    "dock": "left",
    "default_width": 240,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true
  },

  // File associations
  "file_types": {
    "Dockerfile": ["Dockerfile*"],
    "JSON": ["*.json", "*.jsonc"],
    "YAML": ["*.yaml", "*.yml"]
  },

  // ========== LSP SETTINGS ==========
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    },
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "includeInlayParameterNameHints": "all",
          "includeInlayFunctionParameterTypeHints": true
        }
      }
    }
  },

  // ========== LANGUAGES ==========
  "languages": {
    "Rust": {
      "tab_size": 4,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "JavaScript": {
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "TypeScript": {
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "Python": {
      "tab_size": 4,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": "language_server"
    }
  },

  // ========== EDITOR BEHAVIOR ==========
  "cursor_blink": false,
  "hover_popover_enabled": true,
  "confirm_quit": false,
  "autosave": "on_focus_change",
  "format_on_save": "on",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "tab_size": 2,
  "hard_tabs": false,
  "soft_wrap": "prefer_line",
  "show_completions_on_input": true,
  "use_autoclose": true,
  "always_treat_brackets_as_autoclosed": true,

  // ========== TELEMETRY ==========
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
